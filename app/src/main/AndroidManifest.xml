<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.othr.archeologicalfieldwork">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArcheologicalFieldwork">

        <activity
            android:name=".views.map.SiteMapView"
            android:configChanges="orientation|screenSize"/>
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.location.LocationMapView"
            android:label="@string/title_activity_maps"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".views.settings.SettingsView"
            android:parentActivityName=".views.sitelist.SiteListView" />
        <activity
            android:name=".views.login.LoginView"
            android:label="@string/title_activity_login" />
        <activity android:name=".main.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.site.SiteView"
            android:parentActivityName=".views.sitelist.SiteListView"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".views.sitelist.SiteListView" />
    </application>

</manifest>