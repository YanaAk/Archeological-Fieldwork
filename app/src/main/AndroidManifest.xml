<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.othr.archeologicalfieldwork">

    <application
        android:name=".main.MainApp"
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArcheologicalFieldwork">
        <activity android:name=".views.settings.SettingsView"></activity>
        <activity
            android:name=".views.login.LoginView"
            android:label="@string/title_activity_login" />
        <activity android:name=".main.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.site.SiteView"
            android:parentActivityName=".views.sitelist.SiteListView" />
        <activity android:name=".views.sitelist.SiteListView" />
    </application>

</manifest>